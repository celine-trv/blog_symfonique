{% extends 'base.html.twig' %}

{% block title %}
    Liste des articles
{% endblock %}

{% block body %}
    <h1 class="display-4 text-center my-4">{{title}}</h1>

    <div class="album py-4">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        {% for data in articles %}

            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ asset('uploads/img/' ~ data.image) }}" alt="{{ data.title }}">

                    <div class="card-body">
                        <h4 class="text-center">{{ data.title }}</h4>

                        <p class="card-text">{{ data.content|striptags|slice(0,250) }}...</p>

                        <div class="d-flex flex-column justify-content-between align-items-start">
                            <div class="btn-group">
                                <a href="{{ path("blog_show", {"id": data.id}) }}" class="btn btn-sm btn-outline-secondary">Lire la suite</a>
                                <a href="{{ path("blog_edit", {"id": data.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                            </div>

                            <small class="text-muted my-2">Posté le {{ data.createdAt|date("d/m/Y") }} à {{data.createdAt|date("H:i:s")}} dans la catégorie <strong> {{ data.category.title }} </strong></small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        </div>
    </div>
{% endblock %}
