{% extends "base.html.twig" %}

{% block title %}
    Identifiez-vous
{% endblock %}

{% block body %}
    <h1 class="display-4 text-center my-4">Identifiez-vous</h1>

    {% for message in app.flashes("success") %}
        <div class="col-md-7 bg-success p-3 rounded mx-auto text-center text-white mb-4">{{message}}</div>
    {% endfor %}

    {% if error %}
        <div class="col-md-7 bg-danger rounded text-center text-white p-3 mx-auto mb-4">
            {{error.messageKey|trans(error.messageData, "security")}}
        </div>
    {% endif %}

    <form method="post" class="col-md-6 mx-auto" action="{{ path("security_login") }}">
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="email" class="form-control" id="_username" name="_username" placeholder="Email" value="{{lastUsername}}">
        </div>

        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" class="form-control" id="_password" name="_password" placeholder="Mot de passe">
        </div>

        <button type="submit" class="btn btn-secondary mt-3">Continuer</button>
    </form>
{% endblock %}
