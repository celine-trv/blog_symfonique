{% extends "base.html.twig" %}

{% block title %}
    Créer votre compte
{% endblock %}

{% block body %}
    <h1 class="display-4 text-center my-4">Créer votre compte</h1>

    {{ form_start(formRegistration, {"attr": {"class": "col-md-6 mx-auto"}}) }}
        {{ form_row(formRegistration.username, {"label": "Nom d'utilisateur"}) }}
        {{ form_row(formRegistration.email) }}
        {{ form_row(formRegistration.password, {"label": "Mot de passe"}) }}
        {{ form_row(formRegistration.confirm_password, {"label": "Confirmer le mot de passe"}) }}
        <button type="submit" class="btn btn-secondary mt-3">Continuer</button>
    {{ form_end(formRegistration) }}
{% endblock %}
